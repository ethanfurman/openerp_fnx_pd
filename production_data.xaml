!!!xml1.0

~openerp
    ~data noupdate='0'

        // mail message subtypes

        ~record model='mail.message.subtype' #mt_fnx_pd_draft
            @name: Create
            @res_model: fnx.pd.order
            @default eval='True'
            @sequence eval='1'
            @description: Production order imported.

        ~record model='mail.message.subtype' #mt_fnx_pd_sequenced
            @name: Scheduled
            @res_model: fnx.pd.order
            @default eval='False'
            @sequence eval='11'
            @description: Production order scheduled.

        ~record model='mail.message.subtype' #mt_fnx_pd_released
            @name: Released
            @res_model: fnx.pd.order
            @default eval='False'
            @sequence eval='21'
            @description: Production order released to floor.

        ~record model='mail.message.subtype' #mt_fnx_pd_running
            @name: Running
            @res_model: fnx.pd.order
            @default eval='False'
            @sequence eval='31'
            @description: Production started.

        ~record model='mail.message.subtype' #mt_fnx_pd_stopped
            @name: Stopped
            @res_model: fnx.pd.order
            @default eval='False'
            @sequence eval='21'
            @description: Production stopped.

        ~record model='mail.message.subtype' #mt_fnx_pd_produced
            @name: Produced
            @res_model: fnx.pd.order
            @default eval='True'
            @sequence eval='40'
            @description: Order is complete.

        ~record model='mail.message.subtype' #mt_fnx_pd_complete
            @name: Complete
            @res_model: fnx.pd.order
            @default eval='True'
            @sequence eval='41'
            @description: Order is complete.

        ~record model='mail.message.subtype' #mt_fnx_pd_cancelled
            @name: Cancelled
            @res_model: fnx.pd.order
            @default eval='True'
            @sequence eval='41'
            @description: Order cancelled.

        // product categories

        ~record model='product.category' #pd_cleaning
            @name: Cleaning
