!!!xml1.0
~openerp
    ~data

        // Add fnx.pd.order tab to product.product
        ~record #product_normal_form_view_fnx_pd model='ir.ui.view'
                @name: view.product.product.form.fnx_pd
                @model: product.product
                @inherit_id ref='stock.view_normal_procurement_locations_form'
                @priority eval='7'
                @arch type='xml'
                    ~xpath expr="//group[@name='inventory']" position='after'
                        ~group string='Production Orders' groups='fnx_pd.group_fnx_pd_guest'
                            @prod_order_ids colspan='4' nolabel='1' readonly='1'
                                ~tree default_order='order_schedule_date'
                                    @order_no
                                    @schedule_date
                                    @line_id
                                    @allergens
                                    @coating
                                    @state
                        ~group string='Ingredient For' groups='fnx_pd.group_fnx_pd_guest'
                            @prod_ingredient_ids colspan='4' nolabel='1' readonly='1'
                                ~tree default_order='order_schedule_date'
                                    @order_no
                                    @order_product
                                    @qty_needed_desc
                                    @confirmed
                                    @order_state
                                    @order_schedule_date
